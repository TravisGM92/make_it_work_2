<% @projects.each do |project| %>
<h1> <%= project.name %></h1>
<h2> Material: <%= project.material %></h2>
<h2> Challenge Theme: <%= project.challenge.theme %></h2>
<h3> Number of contestants: <%= project.contestants.count %></h3>
<h4> Average years of experience of contestants: <%= (project.contestants.map{ |person| person.years_of_experience}.sum.to_f)/(project.contestants.count.to_f) %></h4>
<div class="child">
  <h1>Add contestant a to project</h1>

    <div class="form-container">

      <%= form_tag "/projects" do %>
      <%= label_tag :name %><br/>
      <%= text_field_tag :name %><br/>
      <%= label_tag :address %><br/>
      <%= text_field_tag :address %><br/>
      <%= label_tag :city %> <br/>
      <%= text_field_tag :city %> <br/>
      <%= label_tag :state %> <br/>
      <%= text_field_tag :state %><br/>
      <%= label_tag :zip %><br/>
      <%= number_field_tag :zip %><br/>
      <%= label_tag :phone_number %> <br/>
      <%= text_field_tag :phone_number %><br/>
      <%= label_tag :description %> <br/>
      <%= text_area_tag :description %><br/>

      <br>
      <%= submit_tag "Add Contestant To Project" %>
      <% end %>
    </div>
  </div>
<% end %>
